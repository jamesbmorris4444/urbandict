<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" >

    <data>
        <import type="android.view.View"/>

        <variable
                name="uiViewModel"
                type="com.fullsekurity.urbandict.ui.UIViewModel" />

        <variable
                name="mainActivity"
                type="com.fullsekurity.urbandict.activity.MainActivity" />
    </data>

    <RelativeLayout
            android:id="@+id/main_activity_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        <android.widget.ImageView
                android:id="@+id/main_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:visibility="@{safeUnbox(uiViewModel.backgroundVisibleForLottie ? View.GONE : View.VISIBLE)}"
                app:image_background="@{uiViewModel.standardBackground}"
                android:layout_below="@+id/toolbar"
                android:layout_alignParentBottom="true" />

        <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/main_background_lottie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="@{safeUnbox(uiViewModel.backgroundVisibleForLottie ? View.VISIBLE : View.GONE)}"
                android:scaleType="centerCrop"
                android:fillViewport="true"
                android:layout_below="@+id/toolbar" />

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:layout_alignParentTop="true"
                app:contentInsetStartWithNavigation="0dp"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

            <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

        </androidx.appcompat.widget.Toolbar>

        <ProgressBar
            android:id="@+id/service_progresss_bar"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/toolbar"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/service_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/service_progresss_bar"
            android:layout_marginTop="15dp" >

            <android.widget.ImageView
                android:id="@+id/stop_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@{uiViewModel.buttonDrawable}"
                app:layout_width_dynamic="@{safeUnbox(uiViewModel.standardButtonWidth)}"
                app:layout_height_dynamic="@{safeUnbox(uiViewModel.standardButtonHeight)}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/stop_service_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop"
                app:text_font="@{uiViewModel.buttonTextTypeface}"
                app:text_color="@{uiViewModel.buttonTextColor}"
                app:text_size="@{safeUnbox(uiViewModel.buttonTextSize)}"
                app:layout_constraintStart_toStartOf="@+id/stop_service"
                app:layout_constraintEnd_toEndOf="@+id/stop_service"
                app:layout_constraintTop_toTopOf="@+id/stop_service"
                app:layout_constraintBottom_toBottomOf="@+id/stop_service" />

            <android.widget.ImageView
                android:id="@+id/print_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@{uiViewModel.buttonDrawable}"
                app:layout_width_dynamic="@{safeUnbox(uiViewModel.standardButtonWidth)}"
                app:layout_height_dynamic="@{safeUnbox(uiViewModel.standardButtonHeight)}"
                app:layout_constraintTop_toBottomOf="@+id/stop_service"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/print_timestamp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Print"
                app:text_font="@{uiViewModel.buttonTextTypeface}"
                app:text_color="@{uiViewModel.buttonTextColor}"
                app:text_size="@{safeUnbox(uiViewModel.buttonTextSize)}"
                app:layout_constraintStart_toStartOf="@+id/print_timestamp"
                app:layout_constraintEnd_toEndOf="@+id/print_timestamp"
                app:layout_constraintTop_toTopOf="@+id/print_timestamp"
                app:layout_constraintBottom_toBottomOf="@+id/print_timestamp"/>

            <TextView
                android:id="@+id/timestamp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="10dp"
                app:text_font="@{uiViewModel.productIdTextTypeface}"
                app:text_color="@{uiViewModel.productIdTextColor}"
                app:text_size="@{safeUnbox(uiViewModel.productIdTextSize)}"
                app:layout_constraintTop_toBottomOf="@+id/print_timestamp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
                android:id="@+id/main_activity_container"
                android:layout_below="@+id/service_buttons"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        <ProgressBar
                android:id="@+id/main_progress_bar"
                style="?android:attr/progressBarStyleLarge"
                android:visibility="gone"
                android:indeterminateTint="@color/red"
                android:layout_centerInParent="true"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:max="100"
                android:indeterminate="true"
                android:progress="1" />

    </RelativeLayout>

</layout>