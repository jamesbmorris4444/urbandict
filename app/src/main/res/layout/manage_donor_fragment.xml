<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" >

    <data>
        <variable
                name="uiViewModel"
                type="com.fullsekurity.theatreblood.ui.UIViewModel" />
        <variable
                name="donorViewModel"
                type="com.fullsekurity.theatreblood.managedonor.ManageDonorViewModel" />
    </data>
    
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            <!-- Start Last Name -->

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edit_text_display_last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:hint="@{donorViewModel.hintTextLastName}"
                    app:text_font_text_input_layout="@{uiViewModel.editTextTypeface}"
                    app:unfocused_edit_text_hint_color="@{uiViewModel.editTextLowerHintColor}"
                    app:focused_upper_text_hint_color="@{uiViewModel.editTextUpperHintColor}"
                    app:layout_marginLeft="@{safeUnbox(uiViewModel.standardLeftAndRightMargin)}"
                    app:layout_marginRight="@{safeUnbox(uiViewModel.standardLeftAndRightMargin)}"
                    android:visibility="@{safeUnbox(donorViewModel.editTextLastNameVisibility)}"
                    app:layout_constraintVertical_chainStyle="spread_inside"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/edit_text_display_first_name"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" >

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_display_last_name_editText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_height_dynamic="@{safeUnbox(uiViewModel.standardEditTextHeight)}"
                        app:layout_width_dynamic="@{safeUnbox(uiViewModel.standardWidth)}"
                        android:text="@={donorViewModel.editTextDisplayModifyLastName}"
                        android:onTextChanged="@{donorViewModel::onTextLastNameChanged}"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:paddingTop="20dp"
                        android:inputType="textPersonName"
                        app:edit_text_cursor="@{uiViewModel.editTextCursor}"
                        app:background_from_res_int="@{uiViewModel.editTextBackgroundResInt}"
                        app:edit_text_font="@{uiViewModel.editTextTypeface}"
                        app:edit_text_color="@{uiViewModel.editTextColor}"
                        app:edit_text_size="@{safeUnbox(uiViewModel.editTextSize)}" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- End Last Name -->

            <!-- Start First Name -->

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edit_text_display_first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:hint="@{donorViewModel.hintTextFirstName}"
                    app:text_font_text_input_layout="@{uiViewModel.editTextTypeface}"
                    app:unfocused_edit_text_hint_color="@{uiViewModel.editTextLowerHintColor}"
                    app:focused_upper_text_hint_color="@{uiViewModel.editTextUpperHintColor}"
                    app:layout_marginLeft="@{safeUnbox(uiViewModel.standardLeftAndRightMargin)}"
                    app:layout_marginRight="@{safeUnbox(uiViewModel.standardLeftAndRightMargin)}"
                    android:visibility="@{safeUnbox(donorViewModel.editTextFirstNameVisibility)}"
                    app:layout_constraintTop_toBottomOf="@+id/edit_text_display_last_name"
                    app:layout_constraintBottom_toTopOf="@+id/edit_text_display_middle_name"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" >

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_display_first_name_edit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_height_dynamic="@{safeUnbox(uiViewModel.standardEditTextHeight)}"
                        app:layout_width_dynamic="@{safeUnbox(uiViewModel.standardWidth)}"
                        android:text="@={donorViewModel.editTextDisplayModifyFirstName}"
                        android:onTextChanged="@{donorViewModel::onTextFirstNameChanged}"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:paddingTop="20dp"
                        android:inputType="textPersonName"
                        app:edit_text_cursor="@{uiViewModel.editTextCursor}"
                        app:background_from_res_int="@{uiViewModel.editTextBackgroundResInt}"
                        app:edit_text_font="@{uiViewModel.editTextTypeface}"
                        app:edit_text_color="@{uiViewModel.editTextColor}"
                        app:edit_text_size="@{safeUnbox(uiViewModel.editTextSize)}" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- End First Name -->

            <!-- Start Middle Name -->

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edit_text_display_middle_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:hint="@{donorViewModel.hintTextMiddleName}"
                    app:text_font_text_input_layout="@{uiViewModel.editTextTypeface}"
                    app:unfocused_edit_text_hint_color="@{uiViewModel.editTextLowerHintColor}"
                    app:focused_upper_text_hint_color="@{uiViewModel.editTextUpperHintColor}"
                    app:layout_marginLeft="@{safeUnbox(uiViewModel.standardLeftAndRightMargin)}"
                    app:layout_marginRight="@{safeUnbox(uiViewModel.standardLeftAndRightMargin)}"
                    android:visibility="@{safeUnbox(donorViewModel.editTextMiddleNameVisibility)}"
                    app:layout_constraintTop_toBottomOf="@+id/edit_text_display_first_name"
                    app:layout_constraintBottom_toTopOf="@+id/edit_text_display_dob"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" >

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_display_middle_name_edit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_height_dynamic="@{safeUnbox(uiViewModel.standardEditTextHeight)}"
                        app:layout_width_dynamic="@{safeUnbox(uiViewModel.standardWidth)}"
                        android:text="@={donorViewModel.editTextDisplayModifyMiddleName}"
                        android:onTextChanged="@{donorViewModel::onTextMiddleNameChanged}"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:paddingTop="20dp"
                        android:inputType="textPersonName"
                        app:edit_text_cursor="@{uiViewModel.editTextCursor}"
                        app:background_from_res_int="@{uiViewModel.editTextBackgroundResInt}"
                        app:edit_text_font="@{uiViewModel.editTextTypeface}"
                        app:edit_text_color="@{uiViewModel.editTextColor}"
                        app:edit_text_size="@{safeUnbox(uiViewModel.editTextSize)}" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- End Middle Name -->

            <!-- Start DOB -->

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edit_text_display_dob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:hint="@{donorViewModel.hintTextDob}"
                    app:text_font_text_input_layout="@{uiViewModel.editTextTypeface}"
                    app:unfocused_edit_text_hint_color="@{uiViewModel.editTextLowerHintColor}"
                    app:focused_upper_text_hint_color="@{uiViewModel.editTextUpperHintColor}"
                    app:layout_marginLeft="@{safeUnbox(uiViewModel.standardLeftAndRightMargin)}"
                    app:layout_marginRight="@{safeUnbox(uiViewModel.standardLeftAndRightMargin)}"
                    android:visibility="@{safeUnbox(donorViewModel.editTextDobVisibility)}"
                    app:layout_constraintTop_toBottomOf="@+id/edit_text_display_middle_name"
                    app:layout_constraintBottom_toTopOf="@+id/radio_buttons_gender"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" >

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_display_dob_edit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_height_dynamic="@{safeUnbox(uiViewModel.standardEditTextHeight)}"
                        app:layout_width_dynamic="@{safeUnbox(uiViewModel.standardWidth)}"
                        android:text="@={donorViewModel.editTextDisplayModifyDob}"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:paddingTop="20dp"
                        android:inputType="date"
                        android:focusable="false"
                        app:background_from_res_int="@{uiViewModel.editTextBackgroundResInt}"
                        app:edit_text_font="@{uiViewModel.editTextTypeface}"
                        app:edit_text_color="@{uiViewModel.editTextColor}"
                        app:edit_text_size="@{safeUnbox(uiViewModel.editTextSize)}" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/calendar_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:onClick="@{(view) -> donorViewModel.onCalendarClicked(view)}"
                    android:layout_marginBottom="4dp"
                    app:layout_constraintBottom_toBottomOf="@+id/edit_text_display_dob"
                    app:layout_constraintLeft_toLeftOf="@+id/edit_text_display_dob"
                    app:layout_constraintEnd_toEndOf="@+id/edit_text_display_dob" />

            <!-- End DOB -->

            <!-- Start Gender Radio Buttons -->

            <android.widget.TextView
                    android:id="@+id/gender_buttons_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{donorViewModel.hintTextGender}"
                    android:visibility="@{safeUnbox(donorViewModel.radioButtonsGenderVisibility)}"
                    android:layout_marginTop="7dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    app:text_font="@{uiViewModel.editTextLabelTypeface}"
                    app:text_color="@{uiViewModel.editTextLabelColor}"
                    app:text_size="@{safeUnbox(uiViewModel.editTextLabelSize)}"
                    app:layout_marginLeft="@{safeUnbox(uiViewModel.standardLeftAndRightMargin)}"
                    app:layout_constraintTop_toBottomOf="@+id/edit_text_display_dob"
                    app:layout_constraintBottom_toTopOf="@+id/radio_buttons_gender"
                    app:layout_constraintLeft_toLeftOf="parent" />

            <RadioGroup
                    android:id="@+id/radio_buttons_gender"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_height_dynamic="@{safeUnbox(uiViewModel.standardEditTextHeight)}"
                    app:layout_width_dynamic="@{safeUnbox(uiViewModel.standardWidth)}"
                    android:paddingTop="18dp"
                    android:onCheckedChanged="@{donorViewModel.onGenderChanged}"
                    app:background="@{uiViewModel.editTextBackground}"
                    app:layout_marginLeft="@{safeUnbox(uiViewModel.standardLeftAndRightMargin)}"
                    app:layout_marginRight="@{safeUnbox(uiViewModel.standardLeftAndRightMargin)}"
                    android:visibility="@{safeUnbox(donorViewModel.radioButtonsGenderVisibility)}"
                    app:layout_constraintTop_toBottomOf="@+id/gender_buttons_label"
                    app:layout_constraintBottom_toTopOf="@+id/abo_rh_dropdown_label"
                    app:layout_constraintLeft_toLeftOf="parent" >

                <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/radio_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:text_font="@{uiViewModel.editTextTypeface}"
                        app:text_color="@{uiViewModel.editTextUpperHintColor}"
                        app:text_size="@{safeUnbox(uiViewModel.editTextSize)}"
                        app:radio_button_color="@{uiViewModel.radioButtonColor}"
                        android:text="@string/radio_gender_male" />

                <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/radio_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:text_font="@{uiViewModel.editTextTypeface}"
                        app:text_color="@{uiViewModel.editTextUpperHintColor}"
                        app:text_size="@{safeUnbox(uiViewModel.editTextSize)}"
                        app:radio_button_color="@{uiViewModel.radioButtonColor}"
                        android:text="@string/radio_gender_female" />

            </RadioGroup>

            <!-- End Gender Radio Buttons -->

            <!-- Start ABO/Rh DropDown -->

            <android.widget.TextView
                android:id="@+id/abo_rh_dropdown_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{donorViewModel.hintTextAboRh}"
                android:visibility="@{safeUnbox(donorViewModel.dropdownAboRhVisibility)}"
                android:layout_marginTop="7dp"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                app:text_font="@{uiViewModel.editTextLabelTypeface}"
                app:text_color="@{uiViewModel.editTextLabelColor}"
                app:text_size="@{safeUnbox(uiViewModel.editTextLabelSize)}"
                app:layout_marginLeft="@{safeUnbox(uiViewModel.standardLeftAndRightMargin)}"
                app:layout_constraintTop_toBottomOf="@+id/radio_buttons_gender"
                app:layout_constraintBottom_toTopOf="@+id/abo_rh_dropdown"
                app:layout_constraintLeft_toLeftOf="parent" />

            <Spinner
                    android:id="@+id/abo_rh_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:paddingTop="20dp"
                    app:dropdown_background="@{uiViewModel.dropdownBackground}"
                    app:background="@{uiViewModel.editTextBackground}"
                    app:layout_height_dynamic="@{safeUnbox(uiViewModel.standardEditTextHeight)}"
                    app:layout_marginLeft="@{safeUnbox(uiViewModel.standardLeftAndRightMargin)}"
                    app:layout_marginRight="@{safeUnbox(uiViewModel.standardLeftAndRightMargin)}"
                    app:layout_constraintTop_toBottomOf="@+id/abo_rh_dropdown_label"
                    app:layout_constraintBottom_toTopOf="@+id/military_branch_dropdown_label"
                    app:layout_constraintLeft_toLeftOf="parent"/>

            <android.widget.ImageView
                    android:id="@+id/abo_rh_dropdown_icon"
                    android:layout_width="16dp"
                    android:layout_height="12dp"
                    android:src="@drawable/lt_drop_down_arrow"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="16dp"
                    app:layout_marginRight="@{safeUnbox(uiViewModel.standardLeftAndRightMargin)}"
                    app:layout_constraintBottom_toBottomOf="@+id/abo_rh_dropdown"
                    app:layout_constraintLeft_toLeftOf="@+id/abo_rh_dropdown"
                    app:layout_constraintEnd_toEndOf="@+id/abo_rh_dropdown"/>

            <!-- End ABO/Rh DropDown -->

            <!-- Start Military Branch DropDown -->

            <android.widget.TextView
                    android:id="@+id/military_branch_dropdown_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{donorViewModel.hintTextMilitaryBranch}"
                    android:visibility="@{safeUnbox(donorViewModel.dropdownMilitaryBranchVisibility)}"
                    android:layout_marginTop="7dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    app:text_font="@{uiViewModel.editTextLabelTypeface}"
                    app:text_color="@{uiViewModel.editTextLabelColor}"
                    app:text_size="@{safeUnbox(uiViewModel.editTextLabelSize)}"
                    app:layout_marginLeft="@{safeUnbox(uiViewModel.standardLeftAndRightMargin)}"
                    app:layout_constraintTop_toBottomOf="@+id/abo_rh_dropdown"
                    app:layout_constraintBottom_toTopOf="@+id/military_branch_dropdown"
                    app:layout_constraintLeft_toLeftOf="parent" />

            <Spinner
                    android:id="@+id/military_branch_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:paddingTop="20dp"
                    app:dropdown_background="@{uiViewModel.dropdownBackground}"
                    app:background="@{uiViewModel.editTextBackground}"
                    app:layout_height_dynamic="@{safeUnbox(uiViewModel.standardEditTextHeight)}"
                    app:layout_marginLeft="@{safeUnbox(uiViewModel.standardLeftAndRightMargin)}"
                    app:layout_marginRight="@{safeUnbox(uiViewModel.standardLeftAndRightMargin)}"
                    app:layout_constraintTop_toBottomOf="@+id/military_branch_dropdown_label"
                    app:layout_constraintBottom_toTopOf="@+id/spacer"
                    app:layout_constraintLeft_toLeftOf="parent"/>

            <android.widget.ImageView
                    android:id="@+id/military_branch_dropdown_icon"
                    android:layout_width="16dp"
                    android:layout_height="12dp"
                    android:src="@drawable/lt_drop_down_arrow"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="16dp"
                    app:layout_marginRight="@{safeUnbox(uiViewModel.standardLeftAndRightMargin)}"
                    app:layout_constraintBottom_toBottomOf="@+id/military_branch_dropdown"
                    app:layout_constraintLeft_toLeftOf="@+id/military_branch_dropdown"
                    app:layout_constraintEnd_toEndOf="@+id/military_branch_dropdown"/>

            <!-- End Military Branch DropDown -->

            <!-- Start Submit/Update Button -->

            <android.widget.ImageView
                    android:id="@+id/submit_update_button_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@{uiViewModel.largeButtonDrawable}"
                    android:layout_marginTop="20dp"
                    android:onClick="@{(view) -> donorViewModel.onUpdateClicked(view)}"
                    app:layout_height_dynamic="@{safeUnbox(uiViewModel.standardButtonHeight)}"
                    app:layout_width_dynamic="@{safeUnbox(uiViewModel.standardLargeButtonWidth)}"
                    app:layout_constraintTop_toBottomOf="@+id/military_branch_dropdown"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                    android:id="@+id/submit_update_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_update"
                    app:text_font="@{uiViewModel.buttonTextTypeface}"
                    app:text_color="@{uiViewModel.buttonTextColor}"
                    app:text_size="@{safeUnbox(uiViewModel.buttonTextSize)}"
                    app:layout_constraintStart_toStartOf="@+id/submit_update_button_icon"
                    app:layout_constraintEnd_toEndOf="@+id/submit_update_button_icon"
                    app:layout_constraintTop_toTopOf="@+id/submit_update_button_icon"
                    app:layout_constraintBottom_toBottomOf="@+id/submit_update_button_icon" />

            <!-- End Submit/Update Button -->

            <!-- Start Spacer -->

            <View
                    android:id="@+id/spacer"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:layout_constraintTop_toBottomOf="@+id/military_branch_dropdown"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <!-- End Spacer -->

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>